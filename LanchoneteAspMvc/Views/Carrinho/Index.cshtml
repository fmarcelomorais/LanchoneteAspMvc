@model CarrinhoViewModel


    <h3><i class="fa-solid fa-cart-shopping"></i> Seu Carrinho de Compras</h3>
    <hr />
    
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <td scope="col">Qunatidade</td>
                <td scope="col">Lanche</td>
                <td scope="col">Preço</td>
                <td scope="col">Subtotal</td>
                <td scope="col">Ações</td>
            </tr>
        </thead>
        <tbody class="thead-dark">
            @foreach(var item in Model.Carrinho.Itens)
            {                
                <tr>
                    <td scope="row">@item.Quantidade</td>
                    <td>@item.Lanche.Nome</td>
                    <td>@item.Lanche.Preco.ToString("C")</td>
                    @{
                        var subtotal = item.Lanche.Preco * item.Quantidade;
                    }
                    <td >@subtotal.ToString("C")</td>
                    <td>
                        <a asp-controller="Carrinho" asp-action="RemoverItem" asp-route-lancheId="@item.Lanche.Id" 
                            class="btn btn-danger text-center">
                            <i class="fa fa-trash"></i>
                        </a>
                     </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end">Total:</td>
                <td class="text-end">@Model.CarrinhoTotal.ToString("C")</td>
            </tr>
        </tfoot>
    </table>
    <section class="text-start ml-4">
        <a asp-controller="Pedido" asp-action="Checkout" class="btn btn-success text-center">
            Encerrar Pedido
        </a>
        <a asp-controller="Lanche" asp-action="Catalogo" class="btn btn-primary text-center">
            Continuar
        </a>
    </section>
