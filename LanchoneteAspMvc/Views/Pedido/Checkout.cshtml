@model Pedido
@{
    ViewData["Title"] = "Checkout";
}

<h3>Você está a um passo de completar o seu pedido</h3>
<hr />
<section class="row" >

<form asp-action="Checkout" method="post" class="col" role="form" >
    <div class="">
        <fieldset>
            <legend>Dados Pessoais</legend>
            <div class="form-group col-md-6">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" required/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" required/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" required/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required/>
            </div>
        </fieldset>
    </div>
    <div class="row">
        <fieldset>
            <legend>Endereço</legend>
            <div class="form-group col-md-6">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" required/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" required/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" required/>
            </div>
        </fieldset>
    </div>
    <div class="input-group">
        <a class="btn btn-outline-info"
            asp-controller="Carrinho"
            asp-action="Index">Voltar</a>
        <input type="submit" class="btn btn-outline-success" value="Finalizar" />
    </div>
</form>
</section>